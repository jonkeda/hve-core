{
  "schemaVersion": "1.0",
  "description": "Schema mapping configuration for frontmatter validation",
  "mappings": [
    {
      "pattern": "README.md|CONTRIBUTING.md|CODE_OF_CONDUCT.md|SECURITY.md|SUPPORT.md",
      "scope": "root",
      "schema": "root-community-frontmatter.schema.json",
      "description": "Root community files"
    },
    {
      "pattern": "docs/**/*.md",
      "scope": "docs",
      "schema": "docs-frontmatter.schema.json",
      "description": "Documentation files in docs directory"
    },
    {
      "pattern": "artifacts/**/*.instructions.md",
      "scope": "instructions",
      "schema": "instruction-frontmatter.schema.json",
      "description": "Instruction files in artifacts directory"
    },
    {
      "pattern": "artifacts/**/*.chatmode.md",
      "scope": "chatmodes",
      "schema": "chatmode-frontmatter.schema.json",
      "description": "ChatMode files in artifacts directory"
    },
    {
      "pattern": "artifacts/**/*.prompt.md",
      "scope": "prompts",
      "schema": "prompt-frontmatter.schema.json",
      "description": "Prompt files in artifacts directory"
    },
    {
      "pattern": "artifacts/**/*.agent.md",
      "scope": "agents",
      "schema": "agent-frontmatter.schema.json",
      "description": "Agent files in artifacts directory"
    },
    {
      "pattern": "artifacts/skills/**/SKILL.md",
      "scope": "skills",
      "schema": "skill-frontmatter.schema.json",
      "description": "Skill definition files in artifacts/skills directory"
    }
  ],
  "defaultSchema": "base-frontmatter.schema.json"
}
