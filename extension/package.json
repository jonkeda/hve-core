{
  "name": "hve-core",
  "displayName": "HVE Core",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "version": "2.2.12",
  "description": "AI-powered chat agents, prompts, and instructions for hybrid virtual environments",
  "publisher": "ise-hve-essentials",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/hve-core.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "main": "./dist/extension.js",
  "activationEvents": [],
  "categories": [
    "Chat"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hve-core",
          "title": "HVE Core",
          "icon": "media/hve-icon.svg"
        }
      ]
    },
    "views": {
      "hve-core": [
        {
          "id": "hveCore.artifactExplorer",
          "name": "Artifacts"
        }
      ]
    },
    "commands": [
      {
        "command": "hveCore.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.toggleGrouping",
        "title": "Toggle Grouping",
        "icon": "$(list-tree)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.filterByType",
        "title": "Filter by Type",
        "icon": "$(filter)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.runArtifact",
        "title": "Run",
        "icon": "$(play)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.openDetail",
        "title": "Details",
        "icon": "$(info)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.toggleArtifact",
        "title": "Toggle",
        "icon": "$(eye)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.openSettings",
        "title": "Manage Artifacts",
        "icon": "$(gear)",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.enableAll",
        "title": "Enable All Artifacts",
        "category": "HVE Core"
      },
      {
        "command": "hveCore.disableAll",
        "title": "Disable All Artifacts",
        "category": "HVE Core"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hveCore.openSettings",
          "when": "view == hveCore.artifactExplorer",
          "group": "navigation"
        },
        {
          "command": "hveCore.refresh",
          "when": "view == hveCore.artifactExplorer",
          "group": "1_actions"
        },
        {
          "command": "hveCore.toggleGrouping",
          "when": "view == hveCore.artifactExplorer",
          "group": "1_actions"
        },
        {
          "command": "hveCore.filterByType",
          "when": "view == hveCore.artifactExplorer",
          "group": "1_actions"
        }
      ],
      "view/item/context": [
        {
          "command": "hveCore.runArtifact",
          "when": "view == hveCore.artifactExplorer && viewItem == runnable",
          "group": "inline"
        },
        {
          "command": "hveCore.openDetail",
          "when": "view == hveCore.artifactExplorer && viewItem =~ /^(runnable|instruction)$/",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "HVE Core",
      "properties": {
        "hveCore.artifacts.initialized": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Whether HVE Core artifacts have been initialized in this workspace."
        },
        "hveCore.treeView.groupByType": {
          "type": "boolean",
          "default": false,
          "description": "Group artifacts by type (agents/prompts/instructions). When false, groups by functional domain."
        }
      }
    }
  },
  "author": "Microsoft",
  "license": "MIT",
  "scripts": {
    "build": "node esbuild.config.mjs --production",
    "build:dev": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:integration": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "marked": "^15.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
